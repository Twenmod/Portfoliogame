{
"tasks": [
    {
        "type": "shell",
        "label": "C/C++: g++ build the game",
        "command": "g++",
        "args": [
            "-g",
            "source/*.cpp",
            "-I",
            "${workspaceFolder}\\src\\**",
            "-o",
            "${fileDirname}\\${fileBasenameNoExtension}",
            "-l","sfml-graphics","-l", "sfml-graphics", "-l","sfml-window", "-l","sfml-system"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
    }
]
}
