{
/// User settings ///
    //Video
    "frameRateLimit": 999999,
    "vSync": false,
    "windowSize": {"width": 1280, "height": 720},

    //World generation
    "worldSeed": 0, // Seed for world generation only use numbers (set 0 for random)
    "worldSize": {"width": 20, "height": 10}, // Size of world in chunks




/// Base Game Settings ///
    //Video settings
        "cullSize": {"width": 1920, "height": 1080}, // Does not draw objects if they are outside this distance
    //Physics settings
        "playerPhysicsStepDistance": 8, // Pixels per physics step
        "playerMaxPhysicsIterations" : 10, // Max physics steps per frame
        "maxDeltaTime": 0.1, // Clamps deltatime to this (in seconds)
    //Player settings
        "playerMoveSpeed": 120, // Movement speed in pixels per second
        "playerAcceleration": 600,
        "playerStopAcceleration": 800, //Acceleration when not holding a direction
        "playerAirAccelerationMultiplier": 0.8, // Multiply acceleration values 
        "playerFriction": 0.1,
        "cayoteTime": 0.12, // How long after going of a platform to update grounded
        "jumpVelocity": 350,
        "jumpGravity": 700, // Gravity while jumping up and holding jump
        "attackRange": 32, // Attackrange in pixels
        "attackDamage": 3,
        "attackInterval": 0.5, //Time between attacks in Seconds 
        "attackDelay": 0.1, //Time between starting attack and hit frame
    //World settings
        "chunkSize": 16, // Tiles per chunk (width and height)
        "chunkLoadDistance" : 2, // Amount of chunks loaded around the player (in a box) so 1 means render 3x3 chunks
        "tileSize": 32, //Size of tiles in pixels
        "gravity": 1500,
        "noiseScale": {"width": 0.02, "height": 0.05}, // Scale for base world generation noise
        "octaves": 3, // Amount of noises to layer above eachother
        "persistence": 0.4, //Persistance of those layers
        "oreNoiseScale": {"width": 0.2, "height": 0.2}, // Scale for the noise used for spawning gold
        "amountOfEnemies": {"min": 5, "max": 30} // Amount of enemies to spawn in the world random in between min/max
}